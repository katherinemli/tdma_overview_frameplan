.realtime_container {
   display: flex;
   flex-direction: column;
   align-items: center; /* Esto asegura que todo esté centrado */
   height: 100vh;
   width: 100%;
   margin: 0;
   box-sizing: border-box;
   overflow: hidden;
   font-size: 0.8vw;
}

.realtime_container_btns {
   flex: 0 0 auto;
   width: 100%;
   max-width: 80rem; /* Para mantener consistencia con el ancho de las tablas */
   display: flex;
   flex-direction: row;
   justify-content: center;
   align-items: center;
   padding: 20px 0;
   box-sizing: border-box;
   margin: 0 auto; /* Esto ayuda a centrar el contenedor */
}
.realtime_container_btns_views {
   display: flex;
   flex-direction: row;
   justify-content: center;
   align-items: center;
   gap: 20px; /* Espacio entre elementos */
}
.realtime_container_views {
   flex: 1; /* Cambiado de height fijo a flex 1 */
   width: 100%;
   display: flex;
   align-items: center;
   justify-content: center;
   box-sizing: border-box;
   overflow: hidden;
   min-height: 0; /* Importante para scroll */
}

.realtime_container_btns_checkbox{
   display: flex;
   flex-direction: row;
   justify-content: center; /* Cambiado de right a center */
   align-items: center;
   gap: 20px; /* Espacio entre elementos */
}

.realtime_btns_checkbox{
   margin-right:2vw;
}
.realtime_btns_views{
   margin-right:2vw;
}
.realtime_container_views{
	
	flex: 0.95;
	display: flex;
   align-items: center;
   justify-content: center;

}
.realtime_container_views_tdma_graph{
	border: 2px solid green;
   height: 48.25rem;
   width: 68.75rem;
   display: flex;
   flex-direction: column;
}
.realtime_container_views_tdma_graph_requested{
   height: 32%;
}
.realtime_container_views_tdma_graph_allocated{
   height: 32%;
}
